<%- include('./include/header', {
title: 'CryptoDogs',
description: 'CryptoDogs',
keywords: 'CryptoDogs',
plugin: [],
private: ['../css/public.css'],
status: 'full',
login: false,
page: 'login'
}) %>

<main class="Main">
    <div class="Hero transaction-password">
        <div class="Container Container--sm Container--center">
            <h2 class="Hero-h2">
                <font style="vertical-align: inherit;">
                    <font style="vertical-align: inherit;">
                        填寫交易密碼
                    </font>
                </font>
            </h2>
            <form>
                <div class="Section">
                    <img class="ProfileHeader-image ProfileHeader-image--clickable" src="../images/logo.svg">
                </div>
                <div class="Section">
                    <p class="InputButtons-group">
                        <label for="address">
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    交易密碼
                                </font>
                            </font>
                        </label>
                        <input type="password" class="InputButtons InputButtons-input passport" placeholder="請填寫交易密碼" maxlength="100">
                    </p>
                </div>
                <div class="Section">
                    <p class="InputButtons-group">
                        <label for="address">
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    確認交易密碼
                                </font>
                            </font>
                        </label>
                        <input type="password" class="InputButtons InputButtons-input passportConfirm" placeholder="請確認交易密碼" maxlength="100">
                    </p>
                </div>
                <div class="Section">
                    <div class="Note Note--warning">
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;">
                                交易密碼完成後，我們將為您生成錢包地址
                            </font>
                        </font>
                    </div>
                    <a class="Button Button--love Button--larger nextStep">
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;">
                                下壹步
                            </font>
                        </font>
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>


